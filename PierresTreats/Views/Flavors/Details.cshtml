@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<hr />
<h3 class="center margin">@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>No treats are using this flavor</p>
}
else
{
  <h4>Treats with this flavor</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Treat.Name</li>
    @using (Html.BeginForm("DeleteTreat", "Flavors"))
    {
      @Html.Hidden("joinId", @join.FlavorTreatId)
      <input type="submit" value="Delete"/>
    }
  }
  </ul>
}

<p class="btn btn-primary">@Html.ActionLink("Back to list", "Index")</p>
<p class="btn btn-primary">@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</p>
<p class="btn btn-primary">@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>
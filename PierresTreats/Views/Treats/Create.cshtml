@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<h4>Add a new treat</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {@class="form-control"})

  @Html.LabelFor(model => model.Calories)
  @Html.TextBoxFor(model => model.Calories, new {@type="number", @class="form-control"})

  @Html.LabelFor(model => model.Cost)
  @Html.TextBoxFor(model => model.Cost, new {@type="number", @class="form-control"})

  <input class="btn btn-info" type="submit" value="Add new treat" />
}
<p class="btn btn-primary">@Html.ActionLink("Show all treats", "Index")</p>